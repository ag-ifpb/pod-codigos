
public class Main3 {
	//SET V, 0
	private static Integer v = 0;//exclusividade de acesso

	public static void main(String[] args) throws InterruptedException {
		//
		int i = 0;
		while(i < 10){
			//
			Thread t1 = new Thread(){
				public void run() {
					v = v + 3;//enq inst
					v = v + 5;
				};
			};
			
			Thread t2 = new Thread(){
				public void run() {
					v = v + 7;//exec1
					v = v + 11;
				};
			};
			//
			t1.start();
			t2.start();
			//
			synchronized ((Integer) v) {//<-- 8
				System.out.println("Valor de v: " + v);//<-- 0, 2, 3, 4, 5, 6, 7 e 8
				System.out.println("Valor de v: " + v);//<-- 0, 2, 3, 4, 5, 6, 7 e 8
				v = 0;
			}
			//
			i++;
		}
		
	}
}

package ag.threads;

import java.sql.SQLException;

public class UpdateOperation implements Runnable {
	private final int id;
	private final Operation op;
	private final Semaphore semaphore;
	
	public UpdateOperation(int id, Operation op, Semaphore se) {
		this.op = op;
		this.semaphore = se;
		this.id = id;
	}
	
	public void run() {
		//como garantir um ID único???
		try {
			//aguardar a inserção
			System.out.println("aguardando t0");
			semaphore.stop();
			//operar
			op.update(id);
			//notificar
			semaphore.release();
			System.out.println("notificando t2");
		} catch (SQLException e) {
			e.printStackTrace();
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
	}
}

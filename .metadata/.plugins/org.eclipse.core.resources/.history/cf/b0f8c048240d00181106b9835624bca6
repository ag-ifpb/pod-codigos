package ag.threads;

import java.sql.SQLException;

public class InsertOperation implements Runnable {
	private final int id;
	private final Operation op;
	private final Monitor semaphore;
	
	public InsertOperation(int id, Operation op, Monitor se) {
		this.op = op;
		this.semaphore = se;
		this.id = id;
	}
	
	public void run() {
		//como garantir um ID Ãºnico???
		try {
			op.insert(id, "Ari " + id);
			//notificar
			semaphore.release();
		} catch (SQLException e) {
			e.printStackTrace();
		} catch (Throwable e) {
			e.printStackTrace();
		}
	}
}

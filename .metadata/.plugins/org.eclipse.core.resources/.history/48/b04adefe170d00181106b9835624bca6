package ag.threads;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

/**
 * Hello world!
 *
 */
public class App {
	public static void main(String[] args) throws SQLException, InterruptedException {
		//pg uri connection
		String pguri = "jdbc:postgresql://192.168.99.100:5432/db?user=postgres&password=123456";
		Connection conn = DriverManager.getConnection(pguri);
		conn.setAutoCommit(true);
		//operation instance
		Operation op = new Operation(conn);
		BlockingChannel channel = new BlockingChannel();
		//threads
		for (int i = 0; i < 10; i++) {
			channel.lock();
			Thread t0 = new Thread(new InsertOperation(op));
			Thread t1 = new Thread(new UpdateOperation(op, t0));
			Thread t2 = new Thread(new DeleteOperation(op, t1, channel));
			t0.start();
			t1.start();
			t2.start();
		}
	}
}

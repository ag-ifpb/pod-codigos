
public class Main3 {
	//SET V, 0
	private static volatile int v = 0;//exclusividade de acesso

	public static void main(String[] args) throws InterruptedException {
		for (int i = 0; i < 10; i++){
			Thread t1 = new Thread(){
				public void run() {
					v = v + 2;//enq inst
					v = v + 2;
				};
			};
			
			Thread t2 = new Thread(){
				public void run() {
					v = v + 3;//exec1
					v = v + 3;
				};
			};
			//
			t1.start();
			t2.start();
			//
			Thread.sleep(100);
			//
			System.out.println("Valor de v: " + v);//<-- 0, 2, 3, 4, 5, 6, 7 e 8 
		}
		
	}
}

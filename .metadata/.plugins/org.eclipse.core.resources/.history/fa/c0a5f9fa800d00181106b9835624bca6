package ag.threads;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

/**
 * Hello world!
 *
 */
public class App {
	public static void main(String[] args) throws SQLException, InterruptedException {
		//pg uri connection
		String pguri = "jdbc:postgresql://192.168.99.100:5432/db?user=postgres&password=123456";
		Connection conn = DriverManager.getConnection(pguri);
		conn.setAutoCommit(false);
		//operation instance
		Operation op = new Operation(conn);
		BlockingChannel channel = new BlockingChannel();
		BlockingQueue monitor = new BlockingQueue(2);
		//threads
		for (int i = 0; i < 10000; i++) {
			//bloqueia se jÃ¡ tiver em uso
			int id = channel.lock();
			Thread t0 = new Thread(new InsertOperation(id, op, monitor));
			Thread t1 = new Thread(new UpdateOperation(id, op, monitor));
			Thread t2 = new Thread(new DeleteOperation(id, op, monitor, channel));
			t0.start();
			t1.start();
			t2.start();
		}
	}
}

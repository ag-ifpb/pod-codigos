package ag.threads;

import java.sql.SQLException;

public class InsertOperation implements Runnable {
	private final Operation op;
	
	public InsertOperation(Operation op) {
		this.op = op;
	}
	
	public void run() {
		//como garantir um ID Ãºnico???
		int id = op.getID();
		try {
			op.insert(id, "Ari " + id);
		} catch (SQLException e) {
			e.printStackTrace();
		}
	}
}

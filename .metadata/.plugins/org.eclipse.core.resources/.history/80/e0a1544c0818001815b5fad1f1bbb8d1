package ag.threads;

import java.sql.SQLException;

public class InsertOperation implements Runnable {
	private final int id;
	private final Operation op;
	private final BlockingQueue monitor;
	private final Volatile vol;
	
	public InsertOperation(int id, Operation op, Volatile vol, BlockingQueue se) {
		this.op = op;
		this.monitor = se;
		this.id = id;
		this.vol = vol;
		
	}
	
	public void run() {
		//como garantir um ID Ãºnico???
		try {
			if (vol.getSuspend()){
				synchronized (vol) {
					System.out.println("travando Insert: " + vol);
					vol.wait();
					System.out.println("destravando Insert: " + vol);
				}
			}
			//operar
			op.insert(id, "Ari " + id);
			System.out.println("2:inserindo " + id);
			//notificar
			monitor.enqueue();
			System.out.println("3:notificando t1");
		} catch (SQLException e) {
			e.printStackTrace();
		} catch (Throwable e) {
			e.printStackTrace();
		}
	}
}

package ag.threads;

import java.sql.SQLException;

public class InsertOperation implements Runnable {
	private final int id;
	private final Operation op;
	
	public InsertOperation(int id, Operation op) {
		this.id = id;
		this.op = op;
	}
	
	public void run() {
		//como garantir um ID Ãºnico???
		try {
			op.insert(id, "Ari " + id);
			//notificar
			synchronized (this) {
				this.notify();
			}
		} catch (SQLException e) {
			e.printStackTrace();
		} catch (Throwable e) {
			e.printStackTrace();
		}
	}
}

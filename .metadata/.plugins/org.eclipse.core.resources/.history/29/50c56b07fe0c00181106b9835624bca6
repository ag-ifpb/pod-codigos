package ag.threads;

import java.sql.SQLException;

public class UpdateOperation implements Runnable {
	private final Operation op;
	
	public UpdateOperation(Operation op) {
		this.op = op;
	}
	
	public void run() {
		//como garantir um ID Ãºnico???
		int id = op.getID();
		try {
			op.update(id);
		} catch (SQLException e) {
			e.printStackTrace();
		}
	}
}
